[Unit]
Description      = Podman -- %J@%I
StopWhenUnneeded = yes

After            = network-online.target

[Container]
Image            = docker.io/library/postgres:13
ContainerName    = %J-%I
AutoUpdate       = registry
RunInit          = yes

HealthCmd        = pg_isready --dbname pdb

Environment      = POSTGRES_DB=pdb
Environment      = POSTGRES_USER=username
Environment      = POSTGRES_PASSWORD=password

Network          = %p1.network

Volume           = %S/local/docker/%J:%S/postgresql/data

[Service]
Restart          = on-failure
ExecStartPost    = podman wait --condition healthy -- %J-%I
