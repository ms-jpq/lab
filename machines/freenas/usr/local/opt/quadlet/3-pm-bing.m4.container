[[Unit]]
Description   = Podman -- %J

[[Container]]
Image         = docker.io/msjpq/bing-daily-images:latest
ContainerName = %J
AutoUpdate    = registry
RunInit       = yes

User          = 1000
Group         = 1000

Volume        = /media/m5_assert([ENV_FS_WALLPAPER]):/data

[[Service]]
Restart       = on-failure

[[Install]]
WantedBy      = 0-podman.target
