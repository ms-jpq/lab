[[Unit]]
Description = Rcloned

BindsTo     = 6-pm-proxy-%j@8080.socket
After       = 6-pm-proxy-%j@8080.socket

[[Container]]
Image       = docker.io/rclone/rclone:latest
AutoUpdate  = registry
RunInit     = yes

Exec        = rcd --rc-web-gui --rc-no-auth --rc-addr=:8080 --dscp=LE

# m5_for([VOL], [
Volume      = /media/VOL:/media/VOL:ro
# ], m5_assert([ENV_FS_RCLONE]))

[[Service]]
Restart     = on-failure

[[Install]]
WantedBy    = default.target
