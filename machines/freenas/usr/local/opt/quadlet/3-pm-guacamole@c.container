[Unit]
Description      = Podman -- %J@%I
StopWhenUnneeded = yes

After            = network-online.target

[Container]
Image            = docker.io/guacamole/guacd:latest
ContainerName    = %J-%I
AutoUpdate       = registry
RunInit          = yes

Network          = %p.network

[Service]
Restart          = on-failure
