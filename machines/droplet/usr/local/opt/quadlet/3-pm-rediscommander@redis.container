[Unit]
Description      = Podman -- %J
StopWhenUnneeded = yes

[Container]
Image            = docker.io/library/redis:latest
ContainerName    = %J-%I
AutoUpdate       = registry
RunInit          = yes

HealthCmd        = redis-cli incr ping

Network          = %p.network
PublishPort      = 127.0.0.53:63800:6380

[Service]
Restart          = on-failure
ExecStartPost    = podman wait --condition healthy -- %J-%I
