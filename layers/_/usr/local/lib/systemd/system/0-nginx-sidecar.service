[Unit]
Description      = Reload nginx on generator updates
StopWhenUnneeded = yes

BindsTo          = nginx.service
After            = nginx.service

[Service]
Restart          = on-failure
PrivateTmp       = yes
ProtectSystem    = strict
ReadWritePaths   = %t/local/nginx %T

ExecStart        = /usr/local/opt/nginx/libexec/sidecar.sh %t/local/nginx/conf %t/local/nginx/www
