[Unit]
Description      = netns -- %E/netns/%I
StopWhenUnneeded = yes
After            = network.target

[Service]
Type             = oneshot
RemainAfterExit  = yes
Restart          = on-failure

RuntimeDirectory = local/netns/%I
Environment      = NETNS=%I

ExecStart        = ip netns add ${NETNS}
ExecStart        = ip --netns ${NETNS} link set dev lo up
ExecStopPost     = -ip netns del ${NETNS}
