mode server

client-to-client
ifconfig-ipv6-pool ${IPV6_NET}
ifconfig-noexec
ifconfig-pool ${IPV4_MINADDR} ${IPV4_MAXADDR}
ifconfig-pool-persist /run/local/ovpn/${}.pool 60
keepalive 10 60
management /run/local/ovpn/${}.sock unix
opt-verify
persist-tun
proto ${PROTOCOL}
push "dhcp-option DNS ${IPV4_ADDR}"
push "dhcp-option DNS ${IPV6_ADDR}"
push "dhcp-option DOMAIN ${DOMAIN}"
push "redirect-private ${}"
tcp-nodelay
tls-server
username-as-common-name
