[Unit]
Description     = Docker Compose

BindsTo         = docker.socket
After           = docker.socket

After           = network-online.target

[Service]
Type            = oneshot
Restart         = on-failure
RemainAfterExit = yes

ProtectSystem   = strict
ProtectHome     = yes
PrivateTmp      = yes
ReadWritePaths  = %t

ExecStart       = /usr/local/opt/docker-compose/libexec/up.sh
